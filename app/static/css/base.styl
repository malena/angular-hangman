body
	background-color #000
	color #666
	font-size: 16px

h1
	font-size 3em
	color: #fff
	text-transform uppercase
	font-family 'Candal', 'sans-serif'

.container
	text-align: center
	margin: auto auto

.game
	position relative
	margin-bottom 2em

.dead-man
	width 100%
	position absolute
	top 0

.well
	background-color: #000
	border: solid 1px #333

.btn-group
	margin: 2em 0

	.btn
