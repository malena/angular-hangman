*
	margin: 0
	padding: 0
	box-sizing: border-box

body.inverse
	overflow hidden
	background-color #fff

	h1
		color #000

	.guess
		background-color #fff
		color #000 

	.well 
		background-color: #fff

	.front 
		background-color: #fff
		color: #000

	.alphabet.correct
		color: #fff
		background-color: #000

	.alphabet.incorrect
		border: solid 1px red

body
	background-color #000
	color #666
	font-size: 16px

h1	
	font-size 3em	
	color: #fff
	text-transform uppercase
	font-family 'Candal', 'sans-serif'

.container
	text-align: center
	margin: auto auto

.game
	position relative 
	margin-bottom 2em

.dead-man
	width 100%
	position absolute
	top 0

.well
	background-color: #000
	border: solid 1px #333

.btn-group
	margin: 2em 0

	.btn
		font-size: 60px
		line-height: 60px
		width: 100px
		height: 100px;
		margin-right: .5em

.input-group
	margin: 2em
	clear: both
	display: block

	input
		text-align: center

.btn
	margin: auto auto
	display: block

input:focus
	outline: 0

.guess
	border: none
	background-color: #000
	font-size: 60px
	margin: 0 0 2em 0
	width: 100px
	height: 100px
	color: #fff

.alphabet
	font-size: 1em 
	width: 20px
	height: 20px
	padding: .3em
	margin: .2em 

.alphabet.correct
	color: #fff
	border: solid 1px #fff

.alphabet.incorrect
	background-color: red
	color: #fff
	border: solid 1px #fff

.body-parts span
	display: none

.body-parts
	position absolute 
	margin auto auto
	height 600px
	width 100%
	z-index: -1

	.deadman
		display: none
		background url('../images/drop.png') no-repeat transparent
		background-position: top right
		position: absolute;
		top: -17em;
		width: 100%;
		height: 100%;

.front
	background-color: #000
	color: #fff

.lost
	position: absolute
	width: 100%
	bottom: 0
	height: 100%
	background url('../images/lost.png') no-repeat center bottom transparent

	h1
		text-align: center
		margin-top: 10% 

.won
	position: absolute
	width: 100%
	bottom: 0
	height: 100%
	background url('../images/won.png') no-repeat left bottom transparent

	h1
		position: relative
		right: 1em
		top: 3em
		display: block
		float: right


[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display: none !important;
