	position absolute
	margin auto auto
	height 600px
	width 100%
	z-index: -1

	.deadman
		display: none
		background url('../images/drop.png') no-repeat transparent
		background-position: top right
		position: absolute;
		top: -17em;
		width: 100%;
		height: 100%;

