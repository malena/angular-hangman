body
	background-color: #000
	color: #666
	font-size: 16px;


h1	
	font-size: 3em;	
	color: #fff
	text-transform: uppercase;
	font-family: 'Candal', 'sans-serif';

.container
	text-align: center
	margin: auto auto

.well
	background-color: #000
	border: solid 1px #333

.btn-group
	margin: 2em 0

	.btn
		font-size: 60px
		line-height: 60px
		width: 100px
		height: 100px;
		margin-right: .5em

.input-group
	margin: 2em
	clear: both
	display: block

	input
		text-align: center

.btn
	margin: auto auto
	display: block

input:focus
	outline: 0

.guess
	border: none
	background-color: #000
	font-size: 60px
	margin: 0 0 2em 0
	width: 100px
	height: 100px
	color: #fff

.alphabet
	font-size: 1em 
	margin: 1em 

.body-parts span
	display: none

.front
	background-color: #000
	color: #fff

